                                        | +342 58756548
                                p.item-author__time Звонить с 17 до 20

                div.edit__bottom
                    div.container
                        div.row
                            div.col-12
                                p.edit__bottom-text Нажимая «опубликовать» вы принимаете наше <a href="">пользовательское соглашение</a>
                        div.row
                            div.col-12.edit__bottom-content
                                button.button.button--bordered Назад
                                button.button.button--violet Опубликовать


        // NUMBERS
        include ../components/numbers.pug

        // FOOTER
        include ../components/footer.pug


        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="js/all-scripts.js"></script>