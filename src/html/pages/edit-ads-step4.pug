doctype html
html
    head
        meta(http-equiv="text/html" charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title Редактирование объявления | Ура!
        link(rel="stylesheet" type="text/css" href="css/style.min.css")
    body
        // HEADER
        include ../components/header.pug
        +header('', true)

        // BREADCRUMBS
        include ../components/breadcrumbs.pug
        +breadcrumbs('Портмоне COACH барсетка кошелек оригинал кожа', ["Личный кабинет", "Мои объявления"])

        section.content.edit
            div.edit__head
                div.container
                    ul.edit-steps
                        li.edit-steps__item.edit-steps__item--ready Описание
                        li.edit-steps__item.edit-steps__item--ready Фотографии
                        li.edit-steps__item.edit-steps__item--ready Контакты
                        li.edit-steps__item.edit-steps__item--active Подтверждение

            form
                div.container
                    div.row
                        div.col-sm-6.col-md-12.col-lg-9
                            div.item-card.item-card--catalog.item-card--list_view.edit__item
                                div.item-card__image
                                    img(src="img/item1.png")
                                div.item-card__info
                                    a.item-card__name Портмоне COACH барсетка кошелек оригинал кожа
                                    p.item-card__description Для современного мира глубокий уровень погружения играет определяющее значение для переосмысления внешнеэкономических политик.
                                div.item-card__other
                                    div.item-card__flex
                                        span.item-card__place Киев
                                        span.item-card__price 600 грн.
                        div.col-sm-6.col-md-12.col-lg-3.edit__author
                            div.item-author
                                div.item-author__top
                                    div.item-author__ava
                                        img(src="img/item-ava.png")
                                    div.item-author__info
                                        p.item-author__name Кирилл
                                        p.item-author__place Золотоноша
                                div.item-author__buttons
                                    a.button.button--violet.item-author__call
                                        <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
